{{#partial "contenido-pagina-colaborador"}}
<div class="main-container">

    <div class="form-container">

        <div class="form-title-container">
            <h3>Formulario de Donación de Vianda</h3>
        </div>

        <div class="form-y-envio-container">
            <h3>Seleccione la heladera en donde quiere ingresar sus viandas</h3>
            <div class="grid-item grid-item-mapa">
                <label for="heladera-destino">Heladera Destino *</label>
                <div id="mapid-destino"></div>
                <label for="heladera-destino-nombre">Heladera Seleccionada:</label>
                <input type="text" id="heladera-destino-nombre" name="heladera-destino-nombre" readonly
                       required>

                <label for="heladera-destino-direccion">Dirección de la Heladera:</label>
                <input type="text" id="heladera-destino-direccion" name="heladera-destino-direccion" readonly
                       required>
            </div>

            <form class="vianda-form" id="registro-form" action="/donacion-vianda" method="POST">
                <input type="hidden" id="heladera-destino-id" name="heladera-destino-id">

                <div class="grid-item">
                    <label for="comida">Comida *</label>
                    <input id="comida" type="text" name="viandas[0].comida" value=""
                           placeholder="Ingrese el nombre de la comida" class="text-input" required>
                </div>

                <div class="grid-item">
                    <label for="calorias">Calorías</label>
                    <input id="calorias" type="number" name="viandas[0].calorias" value="" required min="5" step="5" style="width: 90%;"
                           placeholder="Ingrese la cantidad de calorías" class="text-input">
                </div>

                <div class="grid-item">
                    <label for="fecha-caducidad">Fecha de caducidad *</label>
                    <input type="date" id="fecha-caducidad" name="viandas[0].fechaCaducidad" max="" value=""
                           class="fecha-input" required>
                </div>

                <div class="grid-item">
                    <label for="peso">Peso *</label>
                    <input id="peso" type="number" name="viandas[0].peso" value="" placeholder="Ingrese el peso en gramos"
                           required min="1" step="1" style="width: 90%;" class="text-input">
                </div>

                {{> templates/bases/preguntas_dinamicas}}

            </form>
            <div class=footer-form id="footer-form-container">

                <div id="aclaracion-obligatoriedad">Los campos marcados con (*) son obligatorios</div>

                <div id="btn-agregar-vianda-container">
                    <button type="button" id="btn-agregar-vianda" onclick="agregarVianda()" class="btn">Agregar otra
                        vianda</button>
                </div>

                <div id="btn-envio-form-container">
                    <button type="button" id="btn-envio-form" onclick="enviarFormulario();" class="btn">Enviar
                        formulario</button>
                </div>
            </div>

        </div>


    </div>

</div>

