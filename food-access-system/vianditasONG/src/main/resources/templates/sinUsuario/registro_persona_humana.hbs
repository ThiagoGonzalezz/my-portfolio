{{#partial "contenido-subpagina"}}

    <div class="main-container">

        <div class="form-container">

            <div class="form-title-container">
                <h3>Registro Persona Humana</h3>
                <nav>
                    <a href="personas-juridicas" class="nav-btn"> IR A REGISTRO PERSONA JURÍDICA </a>
                </nav>

            </div>

            <div class = "form-y-envio-container">

                <form class="" id="formulario-registro" action="/humanos" method="POST" enctype="multipart/form-data">
                    <div class="grid-item">
                        <label for="nombre">Nombre *</label>
                        <input id="nombre" type="text" name="nombre" value="" placeholder="Ingrese su nombre" class="text-input" required>
                    </div>

                    <div class="grid-item">
                        <label for="apellido" >Apellido *</label>
                        <input id="apellido" type="text" name="apellido" value="" placeholder="Ingrese su apellido" class="text-input" required>
                    </div>

                    <div class="grid-item">
                        <label for="fecha-nacimiento">Fecha de nacimiento</label>
                        <input type="date" id="fecha-nacimiento" name="fechaNac" max="" value="" class="fecha-input" onchange="cambiarANegro(this.id)">
                    </div>

                    <div class="grid-item">
                        <label class="label-domicilio" for="provincia">Provincia <div class="modalidad-domicilio">*</div> </label>
                        <select id="provincia"name="provincia" class="input-domicilio" class="placeholder" oninput="updateColorSelect(this.id); cargarLocalidades();">
                            <option value="-1" disabled selected hidden > Seleccione la provincia de su domicilio </option>
                            <option value="BUENOS_AIRES">Buenos Aires</option>
                            <option value="CABA">CABA</option>
                            <option value="CATAMARCA">Catamarca</option>
                            <option value="CHACO">Chaco</option>
                            <option value="CHUBUT">Chubut</option>
                            <option value="CORDOBA">Córdoba</option>
                            <option value="CORRIENTES">Corrientes</option>
                            <option value="ENTRE_RIOS">Entre Ríos</option>
                            <option value="FORMOSA">Formosa</option>
                            <option value="JUJUY">Jujuy</option>
                            <option value="LA_PAMPA">La Pampa</option>
                            <option value="LA_RIOJA">La Rioja</option>
                            <option value="MENDOZA">Mendoza</option>
                            <option value="MISIONES">Misiones</option>
                            <option value="NEUQUEN">Neuquén</option>
                            <option value="RIO_NEGRO">Río Negro</option>
                            <option value="SALTA">Salta</option>
                            <option value="SAN_JUAN">San Juan</option>
                            <option value="SAN_LUIS">San Luis</option>
                            <option value="SANTA_CRUZ">Santa Cruz</option>
                            <option value="SANTA_FE">Santa Fe</option>
                            <option value="SANTIAGO_DEL_ESTERO">Santiago del Estero</option>
                            <option value="TIERRA_DEL_FUEGO">Tierra del Fuego</option>
                            <option value="TUCUMAN">Tucumán</option>
                        </select>
                    </div>

                    <div class="grid-item">
                        <label for="select-localidad" class="label-domicilio">Localidad <div class="modalidad-domicilio">*</div></label>
                        <select id="select-localidad" class = "input-domicilio" name="localidad" oninput="oninput=updateSelect2(this.id)">
                        </select>
                    </div>

                    <div class="grid-item">
                        <label for="calle" class="label-domicilio">Calle <div class="modalidad-domicilio">*</div></label>
                        <input id="calle" class="input-domicilio" type="text" name="calle" value="" placeholder="Ingrese la calle de su domicilio" class="text-input" id="domicilio-input">
                    </div>

                    <div class="grid-item">
                        <label for="altura" class="label-domicilio">Altura <div class="modalidad-domicilio">*</div></label>
                        <input id="altura" class="input-domicilio" type="text" name="altura" value="" placeholder="Ingrese la altura de su domicilio" class="text-input" id="domicilio-input">
                    </div>

                    <div class="grid-item">
                        <label for="formas-de-colaboracion" required>Formas de colaboración *</label>
                        <div id = "colaboraciones-container">
                            <div class="colab-container">
                                <select id="formas-de-colaboracion" name="formas-de-colaboracion[]" required oninput="updateColorSelect(this.id)" onchange="actualizarOpcionesColabHumano()">
                                    <option value="-1" hidden disabled selected class="opcion-placeholder">Seleccione un tipo de colaboración </option>
                                    <option value="DONACION_DINERO">Donación de dinero</option>
                                    <option value="DONACION_VIANDAS">Donación de viandas</option>
                                    <option value="DISTRIBUCION_VIANDAS">Distribución de viandas</option>
                                    <option value="ENTREGA_TARJETAS">Distribución de tarjetas</option>
                                </select>
                            </div>
                        </div>
                        <button type="button" id="colab-add-btn" onclick="addFormaColabHumano()" class="btn-secundario">Agregar forma de colaboracion </button>
                    </div>

                    <div class="grid-item">
                        <label for="contactos-select">Contactos *</label>
                        <div id="contactos-container">
                            <div class="contacto-container">
                                <select id="contactos-select" name="tipo-contacto[]" oninput="updateColorSelect(this.id)" onchange="updatePlaceholder(this)" required>
                                    <option value="-1" hidden disabled selected class="opcion-placeholder">Seleccione el tipo de contacto </option>
                                    <option value="TELEGRAM">Telegram</option>
                                    <option value="WHATSAPP">WhatsApp</option>
                                    <option value="CORREO">Email</option>
                                </select>
                                <input type="text" id="contactos-input-principal" name="contacto[]" placeholder="Ingrese el contacto" class="text-input-contactos">
                            </div>
                        </div>
                        <button type="button" id="contact-add-btn" onclick="addContact()" class="btn-secundario">Agregar contacto </button>
                    </div>

                    {{> templates/bases/preguntas_dinamicas}}

                </form>

                <div class = footer-form id="footer-form-container">

                    <div id = "aclaracion-obligatoriedad">Los campos marcados con (*) son obligatorios</div>

                    <div id = "btn-envio-form-container">
                        <button type="" id="btn-envio-form" onclick="enviarFormulario()" class="btn">Enviar formulario</button>
                    </div>
                </div>



            </div>
        </div>
    </div>
{{/partial}}


